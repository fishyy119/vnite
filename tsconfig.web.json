{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/utils/**/*",
    "src/types/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/renderer/src/*"],
      "@ui/*": ["src/renderer/src/components/ui/*"],
      "@locales": ["src/renderer/locales"],
      "@locales/*": ["src/renderer/locales/*"],
      "@appTypes": ["src/types"],
      "@appTypes/*": ["src/types/*"],
      "@appUtils": ["src/utils"],
    }
  }
}
